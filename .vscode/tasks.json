{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "构建表盘二进制",
      "type": "shell",
      "command": "${workspaceFolder}\\scripts\\build_face.bat",
      "presentation": {
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "全新部署",
      "type": "shell",
      "command": "${workspaceFolder}\\scripts\\pushlua.bat",
      "presentation": {
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "热重载代码",
      "type": "shell",
      "command": "${workspaceFolder}\\scripts\\pushlua_hot.bat",
      "presentation": {
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "生成表盘ID",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\scripts\\gen_watchface_id.ps1"
      ],
      "presentation": {
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "去除模拟限制",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\scripts\\unlimit_emulator.ps1"
      ],
      "presentation": {
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
